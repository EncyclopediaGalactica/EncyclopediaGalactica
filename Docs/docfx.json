{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "template": [
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Encyclopedia Galactica",
      "_appTitle": "Encyclopedia Galactica",
      "_enableSearch": true,
      "pdf": false
    }
  }
}