@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@if (ModuleAndScreenState?.Value.SelectedScreen is null)
{
    <h1>Documents main content</h1>
}
else
{
    @switch (ModuleAndScreenState.Value.SelectedScreen)
    {
        case "document":
            <EGDocumentGrid/>
            break;

        case "document_type":
            <EGDocumentTypeGrid/>
            break;

        case "relation_types":
            <EGRelationTypeGrid/>
            break;

        case "applications":
            <EGApplicationGrid/>
            break;
    }
}