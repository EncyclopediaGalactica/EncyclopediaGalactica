<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
        <EnableNETAnalyzers>true</EnableNETAnalyzers>
        <AnalysisMode>All</AnalysisMode>
        <AssemblyName>EncyclopediaGalactica.Services.Document.ValidatorService</AssemblyName>
        <RootNamespace>EncyclopediaGalactica.Services.Document.ValidatorService</RootNamespace>
        <LangVersion>default</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="FluentValidation" Version="11.9.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Document.Contracts.Input.Graphql\Document.Contracts.Input.Graphql.csproj"/>
        <ProjectReference Include="..\Document.Entities\Document.Entities.csproj"/>
        <ProjectReference Include="..\Document.Errors\Document.Errors.csproj"/>
    </ItemGroup>

</Project>
