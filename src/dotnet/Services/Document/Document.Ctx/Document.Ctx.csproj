        <EnableNETAnalyzers>true</EnableNETAnalyzers>
        <AnalysisMode>All</AnalysisMode>
        <AssemblyName>EncyclopediaGalactica.Services.Document.Ctx</AssemblyName>
        <RootNamespace>EncyclopediaGalactica.Services.Document.Ctx</RootNamespace>
        <LangVersion>default</LangVersion>
